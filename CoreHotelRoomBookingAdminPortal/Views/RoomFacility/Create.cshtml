@model CoreHotelRoomBookingAdminPortal.Models.RoomFacility
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

<h4>RoomFacility</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RoomFacilityDescription" class="control-label"></label>
                <input asp-for="RoomFacilityDescription" class="form-control" />
                <span asp-validation-for="RoomFacilityDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Wifi" /> @Html.DisplayNameFor(model => model.Wifi)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AirConditioner" /> @Html.DisplayNameFor(model => model.AirConditioner)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Ekettle" /> @Html.DisplayNameFor(model => model.Ekettle)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Refrigerator" /> @Html.DisplayNameFor(model => model.Refrigerator)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <input asp-for="RoomId" class="form-control" />
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>

    <a asp-controller="RoomFacility" asp-action="Index" class="btn btn-primary">Back To List</a>
</div>

