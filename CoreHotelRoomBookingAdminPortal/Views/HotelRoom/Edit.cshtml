        <select asp-for="HotelId" asp-items="ViewBag.hotels" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="RoomImage">Upload Room Image</label>
        <input type="text" asp-for="RoomImage" class="form-control" aria-describedby="RoomImage" placeholder="Enter Room Image URL">
    </div>


    <button type="submit" class="btn btn-primary">Edit Room</button>
