        <input type="hidden" asp-for="RoomId" class="form-control" aria-describedby="RoomId" placeholder="Enter Room Type">
    </div>
    <div class="form-group">
        <label asp-for="RoomType">Room Type</label>
        <input type="text" asp-for="RoomType" class="form-control" aria-describedby="RoomType" placeholder="Enter Room Type">
    </div>
    <div class="form-group">
        <label asp-for="RoomPrice">Room Price</label>
