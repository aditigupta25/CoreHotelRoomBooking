
@model IEnumerable<coreCustomerHotelRoomBooking.Models.HotelRooms>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_FrontView.cshtml";
}



<div class="album py-5 bg-light">
    <div class="container">

        @*Thumbnail Start*@
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@item.RoomImage" class="bd-placeholder-img card-img-top" />
                        <div class="card-body">
                            <p class="card-text" style="font-weight:bold;">@item.RoomType</p>
                            <p class="card-text">@item.RoomDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="HotelRoom" asp-action="ViewDetails" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-secondary">View</a>
                                    @*<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>*@
                                    <a asp-controller="Book" asp-action="buy" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-secondary" onclick="myFunction()">Book Room</a>

                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
                @*Thumbnail End*@
            }
        </div>
    </div>
</div>