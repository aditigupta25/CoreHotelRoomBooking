
@model IEnumerable<coreCustomerHotelRoomBooking.Models.HotelRooms>
@{ ViewData["Title"] = "Ïndex";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h2>Booking Page</h2>

<table class="table table-hover">
    <tr>

        <th>Id</th>
        <th>Room Type</th>
        <th>Photo</th>
        <th>Room Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
        <th>Options</th>
    </tr>

    @foreach (var item in ViewBag.book)
    {
    <tr>

        <td>@item.HotelRooms.RoomId</td>
        <td>@item.HotelRooms.RoomType</td>
        <td><img src="@item.HotelRooms.RoomImage" width="60" /></td>
        <td>@item.HotelRooms.RoomDescription</td>
        <td>@item.HotelRooms.RoomPrice</td>
        <td>@item.Quantity</td>
        <td>@(item.HotelRooms.RoomPrice * item.Quantity)</td>
        <td><a asp-controller="Book" asp-action="Remove" asp-route-id="@item.HotelRooms.RoomId"><button class="btn btn-danger">Remove</button></a></td>
    </tr>
    }

    <tr>
        <td align="right" colspan="7">Total</td>
        <td>
            @ViewBag.total
        </td>
    </tr>


</table>
<a asp-controller="Home" asp-action="Index" class="btn btn-info">Continue Booking</a>
<a asp-controller="Customer" asp-action="Index" class="btn btn-success">Checkout For Payment</a>
