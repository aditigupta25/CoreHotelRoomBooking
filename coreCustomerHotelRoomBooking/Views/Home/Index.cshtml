
@model IEnumerable<coreCustomerHotelRoomBooking.Models.Hotels>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_FrontView.cshtml";
}


<div class="album py-5 bg-light">
    <div class="container">

        @*Thumbnail Start*@
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img style="width:337px ; height:200px" src="@item.HotelImage" class="bd-placeholder-img card-img-top" />
                    <div class="card-body">
                        <p class="card-text" style="font-weight:bold;">@item.HotelName</p>
                        <p class="card-text">@item.HotelDescription</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-secondary">View</a>
                                @*<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>*@
                                <a asp-controller="HotelRoom" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-secondary">View Hotel Room</a>
                            </div>
                            <small class="text-muted">T&C</small>
                        </div>
                    </div>
                </div>
            </div>
                @*Thumbnail End*@
            }
        </div>
    </div>
</div>