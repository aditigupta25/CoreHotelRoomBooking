
@model IEnumerable<coreCustomerHotelRoomBooking.Models.Hotels>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_FrontView.cshtml";
}


<section class="jumbotron text-center">
   
            <div id="booking" class="section">
                <div class="section-center">
                    <div class="container">
                        <div class="row">
                            <div class="booking-form">
                                
                                <form>
                                    <div class="row no-margin">

                                        <div class="form-group">
                                            <span class="form-label">Search Hotel</span>
                                            <input class="form-control" type="text" placeholder="Country, ZIP, city...">
                                        </div>
                                    </div>

                                    <div class="row no-margin">

                                        <div class="form-group">
                                            <span class="form-label">Check In</span>
                                            <input class="form-control" type="date" required>
                                        </div>
                                    </div>
                                    <div class="row no-margin">
                                        <div class="form-group">
                                            <span class="form-label">Check out</span>
                                            <input class="form-control" type="date" required>
                                        </div>
                                    </div>
                                    <div class="row no-margin">
                                        <div class="form-group">
                                            <span class="form-label">Guests</span>
                                            <select class="form-control">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-btn">
                                            <button class="btn btn-success">Check availability</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
  
</section>

<div class="album py-5 bg-light">
    <div class="container">

        @*Thumbnail Start*@
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img style="width:337px ; height:200px" src="@item.HotelImage" class="bd-placeholder-img card-img-top" />
                    <div class="card-body">
                        <p class="card-text" style="font-weight:bold;">@item.HotelName</p>
                        <p class="card-text">@item.HotelDescription</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-secondary">View</a>
                                @*<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>*@
                                <a asp-controller="HotelRoom" asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-sm btn-outline-secondary">View Hotel Room</a>
                            </div>
                            <small class="text-muted">T&C</small>
                        </div>
                    </div>
                </div>
            </div>
                @*Thumbnail End*@
            }
        </div>
    </div>
</div>